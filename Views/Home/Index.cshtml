@model IEnumerable<VirtualGradingSys.Models.Event>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Events</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                @if (item != null)
                {
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                        </div>
                        <div class="card-footer">
                            @if (item.Id != null)
                            {
                                @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
                                {
                                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-primary">Details</a>
                                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-secondary">Edit</a>
                                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger">Delete</a>
                                } else if(User.IsInRole("Student") || User.IsInRole("Parent"))
                                {
                                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-primary">Details</a>
                                }
                            }
                            else
                            {
                                <span class="text-danger">ID not available</span>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <span class="text-danger">Event is null</span>
                }
            </div>
        }
    </div>
</div>
